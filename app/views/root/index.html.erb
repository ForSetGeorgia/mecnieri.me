
<div class = "index_categories">


<% if @categories.present? %>
  <ul class="categories_main">
      <li class = "logo">
        <%= link_to image_tag('Logo_mecnieri.svg', class: 'logo_image') %>
      </li>

    <% @categories.each do |category| %>
      <li>
        <%= link_to experiments_path(category: category.slug), class: 'index_text' do %>
          <%= category.title %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>
    <%= t('shared.common.no_experiments') %>
  </p>
<% end %>
</div>